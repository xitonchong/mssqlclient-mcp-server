# SQL Server Connection String (REQUIRED)
# Example: Server=localhost;Database=mydb;UID=sa;PWD=your_password;TrustServerCertificate=yes
MSSQL_CONNECTIONSTRING=Server=localhost;Database=master;UID=sa;PWD=your_password;TrustServerCertificate=yes

# Enable query execution tools (default: false)
ENABLE_EXECUTE_QUERY=false
ENABLE_EXECUTE_STORED_PROCEDURE=false
ENABLE_START_QUERY=false
ENABLE_START_STORED_PROCEDURE=false

# Timeout settings (in seconds)
DEFAULT_COMMAND_TIMEOUT_SECONDS=30
CONNECTION_TIMEOUT_SECONDS=15
TOTAL_TOOL_CALL_TIMEOUT_SECONDS=120

# Session management
MAX_CONCURRENT_SESSIONS=10
SESSION_CLEANUP_INTERVAL_MINUTES=60
